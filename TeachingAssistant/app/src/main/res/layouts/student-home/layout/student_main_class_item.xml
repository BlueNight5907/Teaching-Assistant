<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/student_main_class_item_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="190dp"
    android:gravity="right|top"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:clickable="true"
    android:background="@drawable/class_item_border"
    android:ignoreGravity="@id/class_background_image_container"
    >

    <include layout="@layout/class_background_image" android:id="@+id/class_background_image_container"></include>
    <View
        android:id="@+id/tintMode"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:backgroundTint="#30000000"
        android:background="@drawable/rounde_btn_15dp"
        />
    <TextView
        android:id="@+id/student_home_classname"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Lập trình Web và ứng dụng"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/student_home_teacher_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="52dp"
        android:text="Mai Văn Mạnh"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/class_item_more_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:dropDownVerticalOffset="40dp"
        android:spinnerMode="dropdown"
        android:theme="@style/spinner_style"
        android:dropDownWidth="160dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_baseline_more_vert_24_light">
    </Spinner>

    <LinearLayout
        android:id="@+id/event_available_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_event_available_24"/>
        <TextView
            android:id="@+id/event_infor"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Điểm danh buổi 11"
            android:textColor="@color/dracula_orchid"
            android:textStyle="bold"
            android:gravity="left|center"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</RelativeLayout>
