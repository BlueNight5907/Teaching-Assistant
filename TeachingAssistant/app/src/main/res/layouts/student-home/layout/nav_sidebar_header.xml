<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:id="@+id/go_to_manageUser"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounde_btn_15dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/sidebar_user_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_logo_toolbar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user_avt"

            app:civ_border_color="#1B1B1B"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:text="Nguyễn Văn Huy"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/dracula_orchid"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="5dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sinh viên"
                android:id="@+id/user_role"
                android:textColor="@color/dracula_orchid"
                android:textSize="15dp"
                android:layout_marginTop="10dp">
            </TextView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>