<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/sidebar_class_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal"
    android:background="@drawable/sidebar_item_pressed"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/small_class_img"
            android:src="@drawable/class_img"
            android:layout_marginRight="10dp"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/small_class_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lập trình web và ứng dụng"
                android:textColor="@color/dracula_orchid"
                android:textSize="15dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/small_teachername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mai Văn mạnh"
                android:textSize="13dp"
                android:textColor="@color/dracula_orchid"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>