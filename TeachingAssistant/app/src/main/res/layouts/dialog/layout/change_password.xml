<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_dialog" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="textPassword"
                        android:textSize="17dp"
                        android:hint="Nhập mật khẩu cũ"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:textColor="@color/dracula_orchid"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordNewWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="true"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordNew"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="17dp"
                        android:inputType="textPassword"
                        android:layout_marginHorizontal="10dp"
                        android:hint="Nhập mật khẩu mới"
                        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                        android:textColor="@color/dracula_orchid"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/repasswordNewWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:hintEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/repasswordNew"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="17dp"
                        android:inputType="textPassword"
                        android:layout_marginHorizontal="10dp"
                        android:hint="Xác nhận mật khẩu mới"
                        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                        android:textColor="@color/dracula_orchid"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/error"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/chi_gong"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    android:background="@drawable/error_notice"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <Button
                        android:text="Trở về"
                        android:id="@+id/cancel_button"
                        android:background="@drawable/ripple_effect"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="130dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:layout_marginBottom="10dp"
                        android:text="Đổi mật khẩu"
                        android:id="@+id/ok_button"
                        android:background="@drawable/ripple_effect"
                        android:textColor="@color/electronic_blue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="130dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
