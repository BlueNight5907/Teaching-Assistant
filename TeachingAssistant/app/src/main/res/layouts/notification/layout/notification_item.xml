<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:clickable="true"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp">

    <TextView
        android:id="@+id/class_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:text="Lập trình web và ứng dụng"
        android:textColor="@color/dracula_orchid"
        android:textSize="15dp"

        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@+id/tag1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tag1"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_btn_5dp"
        android:clickable="false"
        android:paddingHorizontal="5dp"
        android:text="thông báo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tag2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:text="new"
        android:visibility="invisible"
        android:textColor="@color/chi_gong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Điểm danh buổi 10"
        android:textColor="@color/dracula_orchid"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_name" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16/04/2021"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/dracula_orchid"
        android:textSize="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tag1" />

    <TextView
        android:id="@+id/notification_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="Chào các bạn mình là trần đức bo đây. Mèo méo meo meo meo, con mèo ngu ngok đáng yêu cute phô mai que"
        android:textColor="@color/dracula_orchid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_name" />
</androidx.constraintlayout.widget.ConstraintLayout>