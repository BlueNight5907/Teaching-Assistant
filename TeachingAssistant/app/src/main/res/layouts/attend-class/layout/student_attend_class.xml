<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/include"
        layout="@layout/attend_class_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/infor"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" >
        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đề nghị giáo viên của bạn cung cấp mã lớp học rồi nhập mã đó vào đây"
            android:textSize="15dp"
            android:textColor="@color/dracula_orchid"
            android:maxLines="2"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/dracula_orchid"
            android:text="Mã lớp học"
            android:layout_marginTop="10dp"
            android:layout_marginVertical="5dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/class_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/text_input"
            android:textColor="@color/dracula_orchid"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:hint="Nhập mã lớp học" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/dracula_orchid"
            android:text="Cách đăng nhập bằng mã lớp học"
            android:textStyle="bold"
            android:layout_marginVertical="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dracula_orchid"
            android:textSize="12dp"
            android:text="- Sử dụng tài khoản đã đăng ký"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dracula_orchid"
            android:textSize="12dp"
            android:text="- Sử dụng mã lớp học, có 8 ký tự, bao gồm chữ cái và số, không có dấu cách"></TextView>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>