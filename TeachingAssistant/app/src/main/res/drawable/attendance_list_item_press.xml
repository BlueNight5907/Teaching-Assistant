<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="#E0FBFB">
            <item android:id="@+id/mask">
                <shape
                    android:shape="rectangle">

                    <!-- Set màu nền-->
                    <stroke
                        android:width="1dp"
                        android:color="@color/american_river" >
                    </stroke>
                    <solid
                        android:color="@color/white" >
                    </solid>
                    <corners
                        android:radius="10dp">
                    </corners>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <!-- Set màu nền-->
            <solid
                android:color="@color/white" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="@color/soothing_breeze" >
            </stroke>

            <!-- các thuộc tính căn chỉnh-->
            <corners
                android:radius="10dp">

            </corners>
        </shape>
    </item>

</selector>
