<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <!-- Set màu nền-->
            <solid
                android:color="#66DDF5FD" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="2dp"
                android:color="@color/robins_egg_blue" >
            </stroke>
            <corners
                android:radius="15dp">
            </corners>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <!-- Set màu nền-->
            <solid
                android:color="@color/white" >
            </solid>

            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke
                android:width="1dp"
                android:color="@color/american_river" >
            </stroke>
            <corners
                android:radius="15dp">

            </corners>
        </shape>
    </item>

</selector>