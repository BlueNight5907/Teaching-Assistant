<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="@color/city_lights">
            <item android:id="@+id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="#F1F1F1"/>
                    <!-- Set màu nền-->
                    <corners
                        android:radius="5dp">
                    </corners>
                    <padding android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/mint_leaf" android:width="1dp"/>
            <solid android:color="#F1F1F1">

            </solid>
            <!-- Set màu nền-->
            <corners
                android:radius="5dp">
            </corners>
            <padding android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">

            <!-- Set màu nền-->


            <!-- đặt thuộc tính màu và độ rộng của đường viền -->
            <stroke android:width="1dp" android:color="@color/american_river"></stroke>
            <!-- các thuộc tính căn chỉnh-->
            <solid android:color="#F1F1F1"/>
            <corners
                android:radius="5dp">

            </corners>
            <padding android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp"/>
        </shape>
    </item>

</selector>
